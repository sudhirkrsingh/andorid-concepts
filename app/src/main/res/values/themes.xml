<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConstraintDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        Primary brand color.
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.ConstraintDesign.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ConstraintDesign.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ConstraintDesign.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="roundedImageView" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
    </style>

    <style name="roundedImg" parent="">
     <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


</resources>